@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-5">
    <div class="row p-5">
        <div class="col-md-6">
            <h4>Contact Information</h4>
            <p>Feel free to reach out to us via the following methods:</p>
            <p><strong>Address:</strong> 123 Tour Street, Cityville, Country</p>
            <p><strong>Email:</strong> info@yourtourguide.com</p>
            <p><strong>Phone:</strong> +123 456 789</p>
        </div>
        <div class="col-md-6">
            <h4>Contact Form</h4>
            <form class="contact-form">
                <!-- Add your contact form fields here -->
                <div class="mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Your Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Your Message</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn cart-button w-100">Submit</button>
            </form>
        </div>
    </div>
</div>