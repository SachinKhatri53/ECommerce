@model ECommerce.Models.Deal

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Details";
}
<div class="container p-5 bg-light">
    <div class="row">
        <a asp-action="Index" class="btn btn-sm create-button w-25"><i class="fa-solid fa-arrow-left"></i><span class="ms-2">Back to List</span></a>
    </div>
    <div class="row text-center">
        <h4>@Model.Product.ProductName</h4>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4 p-md-2">
            <img src="~/assets/deal/@Model.DealThumbnail" class="img-fluid img-thumbnail p-md-2">
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="p-md-3">
                    <table class="table table-borderless">
                        <tr>
                            <th class="">Deal Start Date</th>
                            <td>@Model.FormattedStartDate</td>
                        </tr>
                        <tr>
                            <th>Deal End Date</th>
                            <td>@Model.FormattedEndDate</td>
                        </tr>
                        <tr>
                            <th>Original Price</th>
                            <td>@Model.Product.Price</td>
                        </tr>
                        <tr>
                            <th>Deal Price</th>
                            <td>@Model.DealPrice</td>
                        </tr>
                        <tr>
                            <th>Brand</th>
                            <td>@Model.Product.Brand</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5 d-flex justify-content-center">
        <a asp-action="Edit" asp-route-id="@Model?.DealId" class="btn btn-sm create-button w-25 me-5"><i class="fa-regular fa-pen-to-square"></i><span class="ms-2">Edit</span></a>
    </div>
</div>
