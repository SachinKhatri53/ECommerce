@model ECommerce.Models.Deal

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Edit";
}
<div class="container p-4 bg-light">
    <div class="row">
        <a asp-action="Index" class="btn btn-sm create-button w-25"><i class="fa-solid fa-arrow-left"></i><span class="ms-2">Back to List</span></a>
    </div>
    <div class="row mt-2 text-center">
        <h4>Edit Deal</h4>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DealId" />
                <input type="hidden" asp-for="DealThumbnail" />
                <div class="form-group mb-3">
                    <label asp-for="ProductId" class="control-label"></label>
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductName"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DealPrice" class="control-label"></label>
                    <input asp-for="DealPrice" class="form-control" />
                    <span asp-validation-for="DealPrice" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group mb-3">
                            <label class="control-label"></label>
                            <input type="file" id="photoInput" name="photo" accept="image/*" onchange="displaySelectedPhoto()" class="form-control" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="selectedPhotoContainer" class="mb-3" style="display:flex; flex-direction: row; align-items:start;">
                            <img id="selectedPhoto" src="@Url.Content($"~/Assets/Deal/{Model.DealThumbnail}")" alt="Selected Photo" style="width:100%; max-height: 300px;">
                            <span onclick="removeSelectedPhoto()" style="cursor: pointer; color: red; font-size: 30px;">
                                <i class="fa-solid fa-square-xmark"></i>
                            </span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <input type="submit" value="Update Deal" class="btn btn-sm create-button w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
