@model ECommerce.Models.User

@{
    Layout = "~/Views/Shared/_UnloggedLayout.cshtml";
}
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4  p-5 bg-light">
            <div class="row">
                <h2>Login</h2>
                <p>Welcome back !<br>Login you account</p>
            </div>
            <hr />
            <div class="row">
                @if (ViewBag.LoginMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @if(String.Equals(ViewBag.LoginMessage, "Inactive user.")){
                            @ViewBag.LoginMessage <a href = "#" class="text-decoration-none">Click to activate</a>
                        }
                        else{
                        @ViewBag.LoginMessage
                        }       
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form asp-action="Login" asp-controller="User">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="text-end">
                        <a href="" class="text-decoration-none">Forget Password?</a>
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <input type="submit" value="Login" class="btn btn-sm create-button w-100" />
                    </div>
                </form>
            </div>
            <div class="row">
                <p>Don't have an account? <a asp-action="Create" asp-controller="User">Create one</a></p>
                <p class="text-center">OR</p>
                <p class="text-start">Login Up Using:</p>
            </div>
            <div class="row">
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary btn-sm me-3 w-100">
                        Facebook
                    </button>
                    <button class="btn btn-danger btn-sm w-100">Google</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
